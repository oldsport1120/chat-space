.message
  .message-list__group
    .message-list__group__name
      = message.user.name
    .message-list__group__name__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-list__group__message
    - if message.content.present?
      %p.message-list__group__message__content
        = message.content
    = imega_tag message.image.url, class: 'message-list__group__message__image' if message.image.present?